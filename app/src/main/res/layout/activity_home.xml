<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/md_theme_onPrimaryContainer"
    android:gravity="center">


    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/common_google_signin_btn_icon_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Base de datos Control Inv"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEmpleados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empleados"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Empleado"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnCrearEmpleados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Empleados"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnEliminarEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Empleado"
        android:textColor="@color/white"
        android:textColorLink="@android:color/black" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar SesiÃ³n" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="18sp" />

</LinearLayout>